{
  "name": "catala-website",
  "reason": {
    "react-jsx": 3
  },
  "jsx": {
    "version": 4,
    "mode": "classic"
  },
  "refmt": 3,
  "sources": {
    "dir": "src/",
    "subdirs": true,
    "generators": [
      {
        "name": "gen-tailwind",
        "edge": [
          "css/tailwind.css",
          ":",
          "css/index.css"
        ]
      }
    ]
  },
  "generators": [
    {
      "name": "gen-tailwind",
      "command": "tailwindcss build -i $in -o $out -c ../../src/css/tailwind.config.js"
    }
  ],
  "package-specs": [
    {
      "module": "es6",
      "in-source": true
    }
  ],
  "suffix": ".bs.js",
  "namespace": true,
  "bs-dependencies": [
    "@rescript/react",
    "@rescript/core"
  ],
  "bsc-flags": [
    "-open RescriptCore"
  ],
  "ppx-flags": [
    [
      "@greenlabs/res-tailwindcss/ppx",
      "--path src/css/tailwind.css"
    ]
  ]
}
